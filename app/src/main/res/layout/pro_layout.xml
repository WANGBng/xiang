<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <com.recker.flybanner.FlyBanner
                    android:id="@+id/info_simple"
                    android:layout_width="@dimen/dp_312"
                    android:layout_height="@dimen/dp_274"
                   android:layout_margin="@dimen/dp_24"
                    >
                </com.recker.flybanner.FlyBanner>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    >
                    <TextView
                        android:id="@+id/pro_price"
                        android:text="价格"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#ff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/pro_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已售多少件"
                        android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                        style="@style/my_page_address_font12"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/pro_title"
                    android:text="标题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:lineSpacingExtra="@dimen/dp_10"
                    style="@style/my_page_address_font12"

                    />
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    >
                    <TextView
                        android:id="@+id/pro_tit"
                        android:text="商品详情"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/my_page_address_font14"

                        />

                    <View
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="#ff5e70"
                        />

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                         <WebView
                             android:id="@+id/web_view"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerHorizontal="true"
                             >

                         </WebView>
                     </RelativeLayout>

                   <!--  <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/pro_details"
                        android:layout_width="@dimen/dp_312"
                        android:layout_height="@dimen/dp_306"
                        />-->

                    <TextView
                        android:id="@+id/pro_ti"
                        android:text="产品介绍"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_10"
                        style="@style/my_page_address_font14"

                        />
                    <TextView
                        android:id="@+id/cp_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:lineSpacingExtra="@dimen/dp_10"
                        android:text="魅可经典唇膏子弹头口红"
                        />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/js_simple"
                        android:layout_width="@dimen/dp_312"
                        android:layout_height="@dimen/dp_306"
                        android:layout_marginTop="@dimen/dp_10"/>

                    <TextView
                        android:id="@+id/pro_pj"
                        android:text="评价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_10"
                        style="@style/my_page_address_font14"

                        />
                    <TextView
                        android:id="@+id/pj_ti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:lineSpacingExtra="@dimen/dp_10"
                        android:text="当前评论总数 17万"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/pl_rec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_alignParentBottom="true"
           android:layout_alignParentEnd="true"
           android:layout_gravity="center_horizontal"
           android:layout_marginBottom="@dimen/dp_20"
           >
           <RelativeLayout
               android:layout_width="@dimen/dp_41"
               android:layout_height="@dimen/dp_35"
               android:background="@drawable/semi"
              >
               <ImageView
                   android:id="@+id/inf_simple"
                   android:layout_width="@dimen/dp_24"
                   android:layout_height="@dimen/dp_24"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/common_btn_add_n_hdpi" />

           </RelativeLayout>
           <RelativeLayout
               android:layout_width="@dimen/dp_41"
               android:layout_height="@dimen/dp_35"
               android:background="@drawable/semi"
                >
               <ImageView
                   android:id="@+id/in_simple"
                   android:layout_width="@dimen/dp_20"
                   android:layout_height="@dimen/dp_20"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:src="@mipmap/common_btn_buy_n_hdpi" />

           </RelativeLayout>
       </LinearLayout>

</RelativeLayout>