<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="@dimen/dp_151"
        android:layout_height="@dimen/dp_193"
        android:background="@drawable/eight"
        android:layout_marginBottom="@dimen/dp_20"

        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/nav_simple"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            fresco:roundedCornerRadius="@dimen/dp_8"/>

        <TextView
            android:id="@+id/nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quality_title"
            android:maxLength="8"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            style="@style/my_page_address_font12"/>

        <TextView
            android:id="@+id/nav_price"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quality_price"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="#ff0000"
            />

    </LinearLayout>

</LinearLayout>
